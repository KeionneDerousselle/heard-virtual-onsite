{
  "name": "virtual-onsite",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn gen:watch\" \"next dev\"",
    "build": "yarn gen && next build",
    "start": "next start",
    "type-check": "tsc",
    "lint:js": "eslint --ext js,ts,tsx --ignore-path .eslintignore --cache .",
    "lint:prettier": "prettier --check .",
    "lint:fix": "prettier --write --list-different . && yarn lint:js --fix",
    "lint": "yarn lint:js && yarn lint:prettier",
    "next:lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci",
    "prepare": "husky install",
    "gen": "graphql-codegen",
    "gen:watch": "yarn gen --watch"
  },
  "dependencies": {
    "@apollo/client": "^3.6.7",
    "@graphql-tools/merge": "^8.2.14",
    "@hookform/error-message": "^2.0.0",
    "@hookform/resolvers": "^2.9.1",
    "apollo-server-micro": "^3.8.2",
    "classnames": "^2.3.1",
    "deepmerge": "^4.2.2",
    "form-data": "^4.0.0",
    "graphql": "^16.5.0",
    "isomorphic-unfetch": "^3.1.0",
    "lodash.get": "^4.4.2",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-hook-form": "^7.32.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/introspection": "^2.1.1",
    "@graphql-codegen/schema-ast": "^2.4.1",
    "@graphql-codegen/typescript": "^2.5.1",
    "@graphql-codegen/typescript-operations": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.6.6",
    "@next/eslint-plugin-next": "^12.1.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/jest": "^28.1.1",
    "@types/lodash.get": "^4.4.7",
    "@types/lodash.isequal": "^4.5.6",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "17.0.42",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.1",
    "eslint": "^8.17.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tailwind": "^0.2.1",
    "eslint-plugin-testing-library": "^5.5.1",
    "graphql-import": "^1.0.2",
    "graphql-schema-linter": "^3.0.1",
    "graphql-tag": "^2.12.6",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "sass": "^1.52.3",
    "tailwindcss": "^3.1.2",
    "ts-jest": "^28.0.4",
    "typescript": "4.7.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn lint:js --fix",
      "prettier --write"
    ],
    "*.{scss,css,md}": "prettier --write",
    "*.{md,json,yml,yaml,html}": [
      "prettier --write"
    ],
    "*.graphql": [
      "graphql-schema-linter src/**/*.graphql"
    ]
  },
  "graphql-schema-linter": {
    "rules": [
      "deprecations-have-a-reason",
      "descriptions-are-capitalized",
      "enum-values-all-caps",
      "enum-values-have-descriptions",
      "enum-values-sorted-alphabetically",
      "fields-are-camel-cased",
      "fields-have-descriptions",
      "input-object-fields-sorted-alphabetically",
      "input-object-values-are-camel-cased",
      "input-object-values-have-descriptions",
      "type-fields-sorted-alphabetically",
      "types-are-capitalized",
      "types-have-descriptions"
    ],
    "ignore": {
      "types-have-descriptions": [
        "Query",
        "Mutation",
        "Subscription"
      ]
    }
  }
}
